model Notification {
    id      String  @id @default(uuid())
    userId  String?
    title   String
    message String
    read    Boolean @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user User? @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Announcement {
    id      String @id @default(uuid())
    title   String
    message String
    filter  Json?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
