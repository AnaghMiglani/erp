model Notification {
  id      String  @id @default(cuid())
  userId  String
  title   String
  message String
  read    Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Announcement {
  id      String @id @default(cuid())
  title   String
  message String
  filter  Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
